{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["warn", "double"],
		"array-callback-return": ["error", { "checkForEach": true }],
		"no-plusplus": "error",
		"func-style": ["error", "expression"],
		"max-len": [
			"error",
			{
				"code": 80,
				"tabWidth": 2,
				"comments": 60,
				"ignoreRegExpLiterals": true
			}
		]
	}
}
